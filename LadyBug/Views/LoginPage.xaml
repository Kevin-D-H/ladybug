<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LadyBug.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Utils="clr-namespace:LadyBug.Utils"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" HorizontalOptions="Center">
            <Grid Margin="0,40,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        FontFamily="{StaticResource FontAwesomeSolid}"
                        FontSize="85"
                        HorizontalTextAlignment="Center"
                        Text="&#xf188;"
                        TextColor="DarkRed"
                        VerticalTextAlignment="Center" />
                </Grid>

                <Grid
                    x:Name="LoginBox"
                    Grid.Row="1"
                    BackgroundColor="White"
                    HeightRequest="317"
                    HorizontalOptions="Center"
                    WidthRequest="560">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="21,20,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Row="1"
                            FontFamily="{StaticResource FontAwesomeSolid}"
                            Text="&#xf007;"
                            TextColor="DarkRed" />

                        <StackLayout
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,0,0,0">
                            <Label
                                FontSize="14"
                                Text="Username"
                                TextColor="DarkRed" />
                            <Entry
                                x:Name="UserNameBox"
                                Margin="0,5,40,0"
                                AutomationId="UserNameBox"
                                BackgroundColor="White"
                                Focused="UserNameBox_Focused"
                                FontSize="16"
                                ReturnType="Next"
                                TextColor="Black"
                                WidthRequest="220" />

                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    x:Name="UserRecognizer"
                                    NumberOfTapsRequired="1"
                                    Tapped="UserRecognizer_Tapped" />
                            </StackLayout.GestureRecognizers>

                        </StackLayout>
                    </Grid>

                    <Grid Grid.Row="2" Margin="21,20,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label
                            FontFamily="{StaticResource FontAwesomeSolid}"
                            Text="&#xf084;"
                            TextColor="DarkRed" />
                        <StackLayout Grid.Column="1" Margin="5,0,0,0">
                            <Label
                                FontFamily="SourceSansPro-Bold"
                                FontSize="14"
                                Text="Password"
                                TextColor="DarkRed" />
                            <Entry
                                x:Name="PasswordBox"
                                Margin="0,5,40,0"
                                AutomationId="PasswordBox"
                                BackgroundColor="White"
                                Focused="PasswordBox_Focused"
                                FontSize="16"
                                IsPassword="True"
                                WidthRequest="220" />

                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    x:Name="PasswordRecognizer"
                                    NumberOfTapsRequired="1"
                                    Tapped="PasswordRecognizer_Tapped" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </Grid>



                    <Button
                        x:Name="LoginButton"
                        Grid.Row="3"
                        Margin="0,20,0,0"
                        AutomationId="LoginButton"
                        BackgroundColor="DarkRed"
                        CornerRadius="0"
                        FontSize="24"
                        HeightRequest="30"
                        Text="Login"
                        TextColor="White" />
                </Grid>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>